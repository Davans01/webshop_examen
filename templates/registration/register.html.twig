{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
       <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    {# HOME PAGE #}
  <a class="navbar-brand" href="/">Home</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  {# PRODUCTS #}
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/products">Producten</a>
      </li>
      {# PAYMENT #}
      <li class="nav-item active">
        <a class="nav-link" href="/payment">Betalen</a>
      </li>
      {# INVOICES #}
      <li class="nav-item active">
        <a class="nav-link" href="/invoices">Factures</a>
      </li>
    </ul>
    {# LOGIN #}
      <a class="btn my-2 my-sm-0"  href="/login">Login</a>
    {# REGISTER #}
      <a class="btn my-2 my-sm-0"  href="/register">Register</a>
  </div>
</nav>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
